// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)
    "margin-top": "10px",       // Margin from top edge
    "margin-left": "10px",      // Margin from left edge
    "margin-right": "10px",     // Margin from right edge
    "width": "calc(100% - 20px)", // Adjust width to account for margins
    "mode": "dock",
    "exclusive": true,     // Allow gaps around the bar
    "passthrough": false,    // Block clicks on empty areas
    // Choose the order of the modules
    "modules-left": [
        "custom/arch",
        "hyprland/workspaces",
        "custom/spacer-right",
        "custom/spotify",
        "hyprland/mode",
        "hyprland/scratchpad",
        "custom/media",
        "custom/seperator",
        "cava",
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "memory",
        "hyprland/language",
        "clock",
        "tray",
        "custom/power"
    ],
    // Modules configuration
    "hyprland/language": {
        "format": "{short} Û∞åå"
},
     "hyprland/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "active-only": false,
         "persistent": true,
